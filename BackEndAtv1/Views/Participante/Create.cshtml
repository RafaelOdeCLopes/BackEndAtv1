@model BackEndAtv1.Models.Participante

@{
    ViewData["Title"] = "Participante - Adicionar";
}

<h2>Adicionar um participante</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EventoID" class="control-label"></label>
                <select asp-for="EventoID" class="form-control" asp-items="ViewBag.EventoID">
                    <option value="">-- Selecione um evento --</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Adicionar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar à lista</a>
</div>

